# ===========================================
# MyCheckServer - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ----- Database (Azure MySQL) -----
DB_HOST=mycheckserver-db.mysql.database.azure.com
DB_USER=mycheckadmin
DB_PASSWORD=
DB_NAME=mycheckserver
DB_SSL=true

# ----- JWT Authentication -----
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ----- Midtrans Payment Gateway -----
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=
MIDTRANS_IS_PRODUCTION=false

# ----- Email (SMTP) -----
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# ----- Google OAuth -----
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=https://mycheckserver-app.azurewebsites.net/api/auth/google/callback

# ----- Server Configuration -----
PORT=8080
NODE_ENV=production
FRONTEND_URL=https://mycheckserver-app.azurewebsites.net
